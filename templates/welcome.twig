{% extends "base.twig" %}

{% block content %}
	<div class="page-header">
		<h1>Welcome</h1>
	</div>
	<ul class="thumbnails">
	{% for photo in photos %}
		<li class="span4">
			<div class="thumbnail">
				<a href="/photo/{{ photo.value.id }}"><img src="/photoview/{{ photo.value.id }}.jpg" alt="{{ photo.value.title }}" /></a>
				<div class="caption">
					<h3>{{ photo.value.title }}</h3>
				</div>
			</div>
		</li>
		{% if loop.index is divisibleby(3) and not loop.last %}
	</ul>
	<ul class="thumbnails">
		{% endif %}
	{% endfor %}
	</ul>
{% endblock %}