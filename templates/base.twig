										<b class="caret"></b>
									</a>
									<ul class="dropdown-menu">
										<li><a href="{{ path('profile') }}">Profile</a></li>
										<li><a href="{{ path('logout') }}">Logout</a></li>
									</ul>
								</li>
							{% else %}
								<li>
									<a href="{{ path('login') }}">Login</a>
								</li>
							{% endif %}
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
