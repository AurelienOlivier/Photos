{% extends "base.twig" %}

{% block content %}
	<div class="page-header">
		<h1>Add a photo</h1>
	</div>
	<form method="post" action="/create" enctype="multipart/form-data">
		<legend>Add a new photo to your gallery</legend>
		<label>Title</label>
		<input type="text" name="title" required="required" placeholder="Type a title ...">
		<label>Photo</label>
		<input type="file" name="photo" required="required">
		<span class="help-block">Choose a photo on your disk</span>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
{% endblock %}